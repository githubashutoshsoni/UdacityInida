<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
       android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CSK"
                android:layout_margin="8dp"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"

                />
            <TextView
                android:layout_width="match_parent"
                android:text="SCORE:"
                android:padding="8dp"
                android:id="@+id/score_csk"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overs:"
                android:padding="8dp"
                android:textStyle="bold"
                android:id="@+id/csk_overs"
                />

            <Button
                android:layout_width="match_parent"
                android:text="OUT!"
                android:id="@+id/out_csk"
                android:onClick="out_csk"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/one_run_csk"
                android:onClick="one_csk"
                android:text="@string/one_run_csk" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/four_run_csk"
                android:onClick="four_csk"
                android:text="@string/four_run_csk"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/six_run_csk"
                android:onClick="six_csk"
                android:text="add 6 run"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MI"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SCORE:"
                android:padding="8dp"
                android:textStyle="bold"
               android:id="@+id/score_mi"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overs:"
                android:padding="8dp"
                android:id="@+id/mi_overs"
                android:textStyle="bold"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/out_mi"
                android:onClick="out_mi"
                android:text="OUT"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/one_run_mi"
                android:onClick="one_mi"
                android:text="add 1 RUN"

                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/four_run_mi"
                android:onClick="four_mi"
                android:text="add 4 RUN"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/six_run_mi"
                android:onClick="six_mi"
                android:text="add 6 RUN"/>

        </LinearLayout>

    </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THE TEAM WON IS: "
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:id="@+id/result_textView"
                android:layout_above="@+id/result_button"
                android:layout_centerInParent="true"
                />
            <Button

                android:id="@+id/result_button"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Result"
                android:layout_marginTop="90dp"
                android:onClick="result"
                android:layout_width="wrap_content" />

        </RelativeLayout>
</LinearLayout>

</ScrollView>