<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CSK"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"

                />
            <TextView
                android:layout_width="match_parent"
                android:text="SCORE:"
                android:id="@+id/score_csk"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overs:"
                android:textStyle="bold"
                android:id="@+id/csk_overs"
                />

            <Button
                android:layout_width="match_parent"
                android:text="OUT!"
                android:id="@+id/out_csk"
                android:onClick="out_csk"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/one_run_csk"
                android:onClick="one_csk"
                android:text="add 1 RUN" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/four_run_csk"
                android:onClick="four_csk"
                android:text="add 4 RUN"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/six_run_csk"
                android:onClick="six_csk"
                android:text="add 6 RUN"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_out_csk"
                android:text="No 0ff wickets:"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MI"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SCORE:"
                android:textStyle="bold"
               android:id="@+id/score_mi"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overs:"
                android:id="@+id/mi_overs"
                android:textStyle="bold"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/out_mi"
                android:onClick="out_mi"
                android:text="OUT"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/one_run_mi"
                android:onClick="one_mi"
                android:text="add 1 RUN"

                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/four_run_mi"
                android:onClick="four_mi"
                android:text="add 4 RUN"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/six_run_mi"
                android:onClick="six_mi"
                android:text="add 6 RUN"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NO of Wickets:"
                android:id="@+id/text_view_out_mi"
                />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THE TEAM WON IS: "
        android:textStyle="bold"
        android:id="@+id/result_textView"
        android:layout_above="@+id/result_button"
       android:layout_centerInParent="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/result_button"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="Result"
        android:onClick="result"
        />
</RelativeLayout>