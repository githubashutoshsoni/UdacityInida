<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/yellowColorCSKHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CSK"


                    />

                <TextView
                    android:id="@+id/score_csk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="SCORE:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/csk_overs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Overs:"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/out_csk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="out_csk"
                    android:text="OUT!" />

                <Button
                    android:id="@+id/one_run_csk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="one_csk"
                    android:text="@string/one_run_csk" />

                <Button
                    android:id="@+id/four_run_csk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="four_csk"
                    android:text="@string/four_run_csk" />

                <Button
                    android:id="@+id/six_run_csk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="six_csk"
                    android:text="add 6 run" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/BlueColorMIHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MI"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/score_mi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="SCORE:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mi_overs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Overs:"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/out_mi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="out_mi"
                    android:text="OUT" />

                <Button
                    android:id="@+id/one_run_mi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="one_mi"
                    android:text="add 1 RUN"

                    />

                <Button
                    android:id="@+id/four_run_mi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="four_mi"
                    android:text="add 4 RUN" />

                <Button
                    android:id="@+id/six_run_mi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="six_mi"
                    android:text="add 6 RUN" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/result_textView"
                style="@style/greenColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/result_button"
                android:layout_centerInParent="true"
                android:layout_margin="8dp"
                android:text="THE TEAM WON IS: "
                android:textStyle="bold" />

            <Button

                android:id="@+id/result_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90dp"
                android:onClick="result"
                android:text="Result" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/result_button"
                android:layout_marginTop="8dp"
                android:onClick="resetButton"
                android:text="reset" />

        </RelativeLayout>
    </LinearLayout>

</ScrollView>